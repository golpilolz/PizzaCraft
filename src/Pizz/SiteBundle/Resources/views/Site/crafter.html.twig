{# src/Pizz/SiteBundle/Resources/views/Site/index.html.twig #}

{% extends "PizzSiteBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block site_body %}
    <form method="post" action="{{ path('site_craft') }}">
        <div class="accordion" id="accordion2">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                        Type de Pizza
                    </a>
                    </div>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <label class="radio">
                            <input type="radio" name="fondpizz" id="fondpizz1" value="Fond Creme">
                            Fond crème
                            <p>6 €</p>
                        </label>
                        <label class="radio">
                            <input type="radio" name="fondpizz" id="fondpizzs2" value="Fond Tomate" checked>
                            Fond tomate
                            <p>6 €</p>
                        </label>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        Viandes
                    </a>
                </div>
                <div id="collapseTwo" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {% for ingredient in ingredients %}
                            {% for type in ingredient.type %}
                                {% if type.nom == "viande" %}
                                    <label class="checkbox">
                                        <input type="checkbox" name="{{ ingredient.designation }}" value="{{ ingredient.prix }}"> {{ ingredient.designation }}
                                        <p>{{ ingredient.prix }} €</p>
                                    </label>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
                        Fromage
                    </a>
                </div>
                <div id="collapseThree" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {% for ingredient in ingredients %}
                            {% for type in ingredient.type %}
                                {% if type.nom == "fromage" %}
                                    <label class="checkbox">
                                        <input type="checkbox" name="{{ ingredient.designation }}" value="{{ ingredient.prix }}"> {{ ingredient.designation }}
                                        <p>{{ ingredient.prix }} €</p>
                                    </label>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseFour">
                        Les p'tits plus
                    </a>
                </div>
                <div id="collapseFour" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {% for ingredient in ingredients %}
                            {% for type in ingredient.type %}
                                {% if type.nom == "supplement" %}
                                    <label class="checkbox">
                                        <input type="checkbox" name="{{ ingredient.designation }}" value="{{ ingredient.prix }}"> {{ ingredient.designation }}
                                        <p>{{ ingredient.prix }} €</p>
                                    </label>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Ajouter au panier" />
    </form>
{% endblock %}